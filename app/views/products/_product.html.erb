<%= tag.div id: dom_id(my_product) , class: "product" do %>
  <h2><%= my_product.name %> - $<%= my_product.price %></h2>
  <p><%= my_product.description %></p>

 <% if my_reviews.present? %>
    <% my_reviews.each do |review| %>
      <p><%= review.content %></p>
    <% end %>
  <% else %>
    <p>No reviews yet.</p>
  <% end %>
<% end %>
